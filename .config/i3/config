# Automatic back-and-forth when switching to the current workspace
workspace_auto_back_and_forth yes

set $primary_monitor "HDMI-2"
set $secondary_monitor "eDP-1"
# Assign workspace to output
workspace $ws1 output $primary_monitor $secondary_monitor
workspace $ws2 output $primary_monitor $secondary_monitor
workspace $ws3 output $primary_monitor $secondary_monitor
workspace $ws4 output $primary_monitor $secondary_monitor
workspace $ws5 output $primary_monitor $secondary_monitor
workspace $ws6 output $secondary_monitor $primary_monitor
workspace $ws7 output $secondary_monitor $primary_monitor
